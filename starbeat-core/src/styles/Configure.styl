.configure
    width: 100%
    height: 100%
    overflow-y: hidden
    padding: 40px 25px 0px 25px
    .page-title
        font-size: 22px
    .oc-logo
        position: absolute
        top: 40px
        right: 20px
    .form-container
        margin-top: 20px

        .inject-options
            height: 120px
            overflow-y: auto
            .ant-checkbox-wrapper
                width: 50%
                margin: 5px 0px

        & > p, .half > p
            margin: 8px 0px 8px 0px
            font-weight: bold
        
        .smbios-input
            display: flex
            justify-content: space-around
            flex-wrap: wrap
            div
                width: 48%
                margin-bottom: 5px
    .version-info
        display: flex
        flex-wrap: nowrap
        .version-tag
            width: 100%
            font-size: 12px
            margin-top: 5px
    .actions
        margin-top: 20px
        text-align: center

    .configure-success
        margin-top: 20px
        .success-image
            margin: 50px
            text-align: center
            svg
                width: 120px
                height: 120px
        .success-item
            list-style: circle
            margin-left: 10px
            margin-top: 8px
    .half
        width: 48%
        display: inline-block

    .flex
        display: flex
        justify-content: space-between

    .ant-btn-link
        padding: 0px
        margin: 0px
    
    .spinning
        width: 100%
        height: 100%
        display: flex
        justify-content: center
        align-items: center
        z-index: 30
        position: absolute
        top: 0px
        left: 0px
        background: rgb(255, 255, 255)

.download-button
    width: 30px
    height: 30px
    border: 0px
    margin-right: 10px
    background: #fff
    cursor: pointer
    outline: 0
    svg
        width: 20px
        height: 20px
        fill: #888
        transition: .3s all
    &:hover
        svg
            fill: #000
    &.bitbucket.true svg
        fill: #0054c6
    &.github.true svg
        fill: #00869f
    &.jsdelivr.true svg
        fill: #fd4945
    
.download-lists .ant-btn
    padding: 0px
    width: 100%
    text-align: left 
    overflow-x: hidden

.download-lists .ant-btn span
    word-wrap: break-word
    word-break: break-all
    font-size: 10px
    width: 100%
    text-overflow: ellipsis
    

.toobox-win-unsupported
    .win-icon
        width: 100%
        margin: 50px 0px
        text-align: center

.select-other
    margin: 0px
    padding: 0px 
    height: auto
    position: absolute
    right: 30px
.model-select
    p
        display: inline
        svg 
            width: 10px
            height: 10px
            fill: #000
.model-select-button
    display: inline-block
    width: 100%
    border: 0px
    word-break: break-all
    &:hover
        background: #eff
    &.true
        background: #eff
.brand-title
    font-weight: bold
    margin: 15px 0px